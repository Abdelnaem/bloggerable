<b:widget id='Blog1' locked='true' title='Blog Posts' type='Blog' version='2' visible='true'>
  <b:widget-settings>
    <b:widget-setting name='showDateHeader'>false</b:widget-setting>
    <b:widget-setting name='style.textcolor'>#000000</b:widget-setting>
    <b:widget-setting name='showShareButtons'>true</b:widget-setting>
    <b:widget-setting name='showCommentLink'>true</b:widget-setting>
    <b:widget-setting name='style.urlcolor'>#008000</b:widget-setting>
    <b:widget-setting name='showAuthor'>true</b:widget-setting>
    <b:widget-setting name='style.linkcolor'>#0000ff</b:widget-setting>
    <b:widget-setting name='style.unittype'>TextAndImage</b:widget-setting>
    <b:widget-setting name='style.bgcolor'>#ffffff</b:widget-setting>
    <b:widget-setting name='showAuthorProfile'>true</b:widget-setting>
    <b:widget-setting name='style.layout'>1x1</b:widget-setting>
    <b:widget-setting name='showLabels'>true</b:widget-setting>
    <b:widget-setting name='showLocation'>true</b:widget-setting>
    <b:widget-setting name='showTimestamp'>true</b:widget-setting>
    <b:widget-setting name='postsPerAd'>1</b:widget-setting>
    <b:widget-setting name='showBacklinks'>true</b:widget-setting>
    <b:widget-setting name='style.bordercolor'>#ffffff</b:widget-setting>
    <b:widget-setting name='showInlineAds'>true</b:widget-setting>
    <b:widget-setting name='showReactions'>true</b:widget-setting>
  </b:widget-settings>
  <b:includable id='main'>

    <b:comment>### Metadata JSON ###</b:comment>

    <b:if cond='data:posts.notEmpty'>
      <div class='script-application-ld-json' id='script-application-ld-json'>
        <b:loop values='data:posts' var='post'>
          <b:include name='postMetadataJSON'/>
        </b:loop>
      </div>
    </b:if>



    <b:comment>### Breadcrumb ###</b:comment>

    <b:if cond='!data:view.isHomepage'>
      <ol class='breadcrumb'>

        <b:comment>=== Homepage ===</b:comment>
        <b:if cond='data:view.isHomepage'>
          <b:comment>None</b:comment>
        </b:if>

        <b:comment>=== Item page ===</b:comment>
        <b:if cond='data:view.isPost'>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'><data:messages.home/></a>
          </li>
          <li class='breadcrumb-item active'>Post</li>
          <b:loop values='data:posts' var='post'>
            <li class='breadcrumb-item active'><b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/></li>
          </b:loop>
        </b:if>

        <b:comment>=== Static page ===</b:comment>
        <b:if cond='data:view.isPage'>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'><data:messages.home/></a>
          </li>
          <li class='breadcrumb-item active'>Page</li>
          <b:loop values='data:posts' var='post'>
            <li class='breadcrumb-item active'><b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/></li>
          </b:loop>
        </b:if>

        <b:comment>=== Search (label) page ===</b:comment>
        <b:if cond='data:view.search.label'>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'><data:messages.home/></a>
          </li>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='path(data:blog.homepageUrl, "/search")'>Search</a>
          </li>
          <li class='breadcrumb-item active'>Label</li>
          <li class='breadcrumb-item active'><data:view.search.label/></li>
        </b:if>

        <b:comment>=== Search (query) page ===</b:comment>
        <b:if cond='data:view.search.query'>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'><data:messages.home/></a>
          </li>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='path(data:blog.homepageUrl, "/search")'>Search</a>
          </li>
          <li class='breadcrumb-item active'>Query</li>
          <li class='breadcrumb-item active'><data:view.search.query/></li>
        </b:if>

        <b:comment>=== Search (default) page ===</b:comment>
        <b:if cond='data:view.search and !data:view.search.label and !data:view.search.query'>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'><data:messages.home/></a>
          </li>
          <li class='breadcrumb-item active'>Search</li>
        </b:if>

        <b:comment>=== Archive page ===</b:comment>
        <b:if cond='data:view.isArchive'>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'><data:messages.home/></a>
          </li>
          <b:if cond='data:view.archive.month'>
            <li class='breadcrumb-item'>
              <a class='breadcrumb-link' expr:href='data:blog.homepageUrl + data:view.archive.year'><data:view.archive.year/></a>
            </li>
            <li class='breadcrumb-item active'><data:view.archive.month/></li>
          <b:else/>
            <li class='breadcrumb-item active'><data:view.archive.year/></li>
          </b:if>
        </b:if>

        <b:comment>=== Error page ===</b:comment>
        <b:if cond='data:view.isError'>
          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'><data:messages.home/></a>
          </li>
          <li class='breadcrumb-item active'>404</li>
        </b:if>

      </ol><!-- /.breadcrumb -->
    </b:if>



    <b:comment>### Status message ###</b:comment>

    <b:comment>=== Homepage ===</b:comment>
    <b:if cond='data:view.isHomepage and data:posts.empty'>
      <div class='status-message status-message-danger' role='alert'>
        <data:messages.theresNothingHere/>
      </div>
    </b:if>

    <b:comment>=== Search (label) page ===</b:comment>
    <b:if cond='data:view.search.label'>
      <b:if cond='data:posts.size gte 1'>
        <div class='status-message status-message-success' role='alert'>
          <data:view.search.resultsMessageHtml/>
        </div>
      <b:else/>
        <div class='status-message status-message-danger' role='alert'>
          <data:view.search.resultsMessageHtml/> : <data:messages.noResultsFound/>
        </div>
      </b:if>
    </b:if>

    <b:comment>=== Search (query) page ===</b:comment>
    <b:if cond='data:view.search.query'>
      <b:if cond='data:posts.size gte 1'>
        <div class='status-message status-message-success' role='alert'>
          <data:view.search.resultsMessageHtml/>
        </div>
      <b:else/>
        <div class='status-message status-message-danger' role='alert'>
          <data:view.search.resultsMessageHtml/> : <data:messages.noResultsFound/>
        </div>
      </b:if>
    </b:if>

    <b:comment>=== Archive page ===</b:comment>
    <b:if cond='data:view.isArchive'>
      <b:if cond='data:posts.size gte 1'>
        <div class='status-message status-message-success' role='alert'>
          <data:view.archive.rangeMessage/>
        </div>
      <b:else/>
        <div class='status-message status-message-danger' role='alert'>
          <data:view.archive.rangeMessage/> : <data:messages.noResultsFound/>
        </div>
      </b:if>
    </b:if>

    <b:comment>=== Error page ===</b:comment>
    <b:if cond='data:view.isError'>
      <div class='status-message status-message-danger' role='alert'>
        <data:navMessage/>
      </div>
    </b:if>



    <b:comment>### Posts ###</b:comment>

    <b:if cond='data:posts.notEmpty'>
      <div class='posts'>

        <b:comment>=== Homepage ===</b:comment>
        <b:if cond='data:view.isHomepage'>
          <b:loop values='data:posts' var='post'>
            <article class='post' expr:id='"post-" + data:post.id'>
              <!-- Title -->
              <h2 class='post-title'>
                <a b:whitespace='remove' class='post-title-link' expr:href='data:post.link ?: data:post.url'>
                  <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/>
                </a>
              </h2>
              <!-- Snippet -->
              <div class='post-snippet'>
                <b:if cond='data:post.hasJumpLink'>
                  <data:post.body/>
                <b:else/>
                  <data:post.snippets.short/>
                </b:if>
              </div>
              <!-- Labels -->
              <ul class='post-label'>
                <b:if cond='data:post.labels'>
                  <b:loop index='i' values='data:post.labels' var='label'>
                    <li class='post-label-item'>
                      <a b:whitespace='remove' class='post-label-link' expr:href='params(data:label.url, { max-results: "12" })' expr:title='data:label.name'>
                        <data:label.name/>
                      </a>
                    </li>
                  </b:loop>
                <b:else/><!-- fallback -->
                  <li class='post-label-item'>
                    <span class='post-label-link nolabel'>Unlabelled</span>
                  </li>
                </b:if>
              </ul>
              <!-- Meta -->
              <ul class='post-meta'>
                <!-- Author name -->
                <li class='post-meta-item'>
                  <data:messages.postedBy/>
                  <b:if cond='data:post.author'>
                    <b:if cond='data:post.author.profileUrl'>
                      <a b:whitespace='remove' class='post-meta-link' expr:href='data:post.author.profileUrl' expr:title='data:messages.visitProfile'>
                        <data:post.author.name/>
                      </a>
                    <b:else/><!-- no profileUrl -->
                      <span><data:post.author.name/></span>
                    </b:if>
                  <b:else/><!-- fallback -->
                    <span>Anonymous</span>
                  </b:if>
                </li>
                <!-- Date (published) -->
                <li class='post-meta-item'>
                  <data:messages.on/>
                  <time expr:datetime='data:post.date.iso8601' expr:title='data:post.date.iso8601'>
                    <b:eval expr='format(data:post.date, "MMM dd, YYYY")'/>
                  </time>
                </li>
                <!-- Number of comments -->
                <b:if cond='data:post.allowComments'>
                  <li class='post-meta-item'>
                    <a b:whitespace='remove' class='post-meta-link' expr:href='data:post.commentsUrl' expr:title='data:messages.comments'>
                      <b:if cond='data:post.commentSource != 1'>
                        <!-- Google+ Comments (No) -->
                        <b:message name='messages.numberOfComments'>
                          <b:param expr:value='data:post.numberOfComments' name='numComments'/>
                        </b:message>
                      <b:else/>
                        <!-- Google+ Comments (Yes) -->
                        <data:messages.comments/>
                      </b:if>
                    </a>
                  </li>
                </b:if>
                <!-- Sharing -->
                <li class='post-meta-item'>
                  <div class='post-share'>
                    <span b:whitespace='remove' class='post-share-toggle' tabindex='0'>
                      <data:messages.share/>
                    </span>
                    <ul class='post-share-menu'>
                      <li class='post-share-menu-item'>
                        <a b:whitespace='remove' class='post-share-menu-link' expr:href='params(data:post.shareUrl, { target: "twitter" })' target='_blank'>
                          Twitter
                        </a>
                      </li>
                      <li class='post-share-menu-item'>
                        <a b:whitespace='remove' class='post-share-menu-link' expr:href='params(data:post.shareUrl, { target: "facebook" })' target='_blank'>
                          Facebook
                        </a>
                      </li>
                      <li class='post-share-menu-item'>
                        <a b:whitespace='remove' class='post-share-menu-link' expr:href='params(data:post.shareUrl, { target: "googlePlus" })' target='_blank'>
                          Google+
                        </a>
                      </li>
                      <li class='post-share-menu-item'>
                        <a b:whitespace='remove' class='post-share-menu-link' expr:href='params(data:post.shareUrl, { target: "pinterest" })' target='_blank'>
                          Pinterest
                        </a>
                      </li>
                      <li class='post-share-menu-item'>
                        <a b:whitespace='remove' class='post-share-menu-link' expr:href='params(data:post.shareUrl, { target: "email" })' target='_blank'>
                          Email
                        </a>
                      </li>
                      <li class='post-share-menu-item'>
                        <a b:whitespace='remove' class='post-share-menu-link' expr:href='params(data:post.shareUrl, { target: "blog" })' target='_blank'>
                          BlogThis!
                        </a>
                      </li>
                    </ul>
                  </div>
                </li>
              </ul>
            </article>
          </b:loop>
