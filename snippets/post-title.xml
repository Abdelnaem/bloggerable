<!--

# About

Title of the post.

Usage:

<b:loop values='data:posts' var='post'>
  [snippet]
</b:loop>

# Customize

- `h1` - wrapper

# Table of Contents

- Default
- No title message
- Anchors

-->


<!-- # Default -->

<b:if cond='data:post.title'>
  <h1>
    <data:post.title/>
  </h1>
</b:if>


<!-- # No title message -->

<h1>
  <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/>
</h1>


<!-- # Anchors -->

<b:if cond='data:post.title'>
  <h1>
    <a href='data:post.link ? data:post.link : data:post.url'>
      <data:post.title/>
    </a>
  </h1>
</b:if>

<!-- + No title message -->

<h1>
  <a href='data:post.link ? data:post.link : data:post.url'>
    <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/>
  </a>
</h1>
