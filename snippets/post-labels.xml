<!--

# About

Label of the post.

Usage:

<b:loop values='data:posts' var='post'>
  [snippet]
</b:loop>

# Customize

- `12` - maximum number of posts in label page
- `class-name` - classes

# Table of Contents

- Default
- Comma

-->


<!-- # Default -->

<b:if cond='data:post.labels'>
  <b:loop index='i' values='data:post.labels' var='label'>
    <a b:whitespace='remove' class='class-name' expr:href='params(data:label.url, { max-results: "12" })' expr:title='data:label.name'>
      <data:label.name/>
    </a>
  </b:loop>
<b:else/><!-- unlabelled -->
  <span class='class-name'>Unlabelled</span>
</b:if>


<!-- # Comma -->

<b:if cond='data:post.labels'>
  <b:loop index='i' values='data:post.labels' var='label'>
    <a b:whitespace='remove' class='class-name' expr:href='params(data:label.url, { max-results: "12" })' expr:title='data:label.name'>
      <data:label.name/>
    </a><b:if cond='data:i != (data:post.labels.size - 1)'>,</b:if>
  </b:loop>
<b:else/><!-- unlabelled -->
  <span class='class-name'>Unlabelled</span>
</b:if>
