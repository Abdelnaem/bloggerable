<!--

# About

Link to the full post.

Usage:

<b:loop values='data:posts' var='post'>
  [snippet]
</b:loop>

# Customize

- `class-name` - classes

# Table of Contents

- Default

-->


<!-- # Default -->

<b:if cond='data:post.hasJumpLink'>
  <div class='class-name' expr:id='"More_" + data:widget.instanceId + "_" + data:post.id'><!-- wrapper (if needed) -->
    <a b:whitespace='remove' expr:class='data:linkClass' expr:href='fragment(data:post.url, "more")' role='button'>
      <b:attr expr:value='data:post.title ? data:post.title : ""' name='title'/>
      <data:blog.jumpLinkMessage/>
    </a>
  </div>
<b:else/>
  <b:if cond='data:post.snippets'>
    <div class='class-name' expr:id='"More_" + data:widget.instanceId + "_" + data:post.id'><!-- wrapper (if needed) -->
      <a b:whitespace='remove' class='class-name' expr:href='data:post.url' role='button'>
        <b:attr expr:value='data:post.title ? data:post.title : ""' name='title'/>
        <data:messages.keepReading/>
      </a>
    </div>
  </b:if>
</b:if>
